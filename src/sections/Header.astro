<style>
 
    @media(min-width: 850px){
        .label_hamburguesa, #label_hamburguesa{
            display: none;
        }
        
    }
    @media(max-width: 849px){
        .check_menu:checked + .ul_link{
            height: calc(100vh);
        }
        .navigation{
            display: flex;
            flex-wrap: wrap;
            position: -webkit-sticky; /* For Safari */
            position: sticky;
            top:0;
            justify-content: space-between;
            align-items: center;  
            border-radius: 0% !important;
            width: 100% !important;
            z-index: 1000;
        }

        .ul_link{
            background-color: rgb(38, 0, 43);
            z-index: 1000;
            position: absolute;
            top: 80px;
            right: 0;
            display: flex;
            flex-direction: column;
           /* height: calc(100vh);*/
            height: 0;
            overflow: hidden;
            gap: 2rem;
            li{
                font-size: 2rem;
                font-weight: bold;
            }
            li .active{
               /* transform: none!important;
                opacity: 1;
                filter: drop-shadow(0 0 5px rgba(255, 255, 255, 0.8));*/
                .icon{
                    transform: none !important;
                    filter: drop-shadow(0 0 5px rgba(255, 255, 255, 0.8));
                    opacity: 1 !important;
                }
                .text{
                    transform: none !important;
                    filter: drop-shadow(0 0 5px rgba(255, 255, 255, 0.8));
                    opacity: 1 !important;
                }
            }
            li:hover{
                /*transform: none !important;
                opacity: 1;
                filter: drop-shadow(0 0 5px rgba(255, 255, 255, 0.8));*/
                .icon{
                    transform: none !important;
                    filter: drop-shadow(0 0 5px rgba(255, 255, 255, 0.8));
                    opacity: 1 !important;
                    cursor: pointer;
                }
                .text{
                    transform: none !important;
                    filter: drop-shadow(0 0 5px rgba(255, 255, 255, 0.8));
                    opacity: 1 !important;
                }
            }
            li{
                a{
                    display: inline-block !important;                    
                    .icon{
                        width: 95px !important;
                        height: 95px;

                        color:#fff;
                        transition: 0.2s;
                        opacity: 1!important;
                    }
                    .text{
                        display: block;
                        padding-left: 50px;

                        position: absolute;
                        color: #fff;
                        font-weight: 400;
                        
                        /*transform: translateX(50px);*/
                        font-size: 1rem;
                        transition: 0.3s;
                    }
                }
            }
        }
        img{
            width: 90px;
            height: 90px;
            padding-left: 0;
        }
        .header{
            
            padding-top: 0% !important;
        }
    }

    .header{
		
		grid-area: header-area;
		display: flex;
		justify-content: center;
		padding-top: 15px;
	}

    #label_hamburguesa{
        display: none;
    }
    
    img{
        width: 90px;
        height: 90px;
        padding-left: 0;
    }
    
    .navigation{
        display: flex;
        justify-content: center;
        align-items: center;
        width: 80%;
        height: 80px;
        background-color: rgb(38, 0, 43); 
        border-radius: 40px; 
        z-index: 1000; 
        position: -webkit-sticky; /* For Safari */
        position: sticky;
        .text{
            text-transform: uppercase;
        }
        img{
            display: flex;
            justify-content: start;
        }
        .ul_link{
            display: flex;
            justify-content: end;
            align-items: center;
            width: 75%;            
            gap: 20px;
            li.active{
                .icon{
                    transform: translateY(10px);
                    filter: drop-shadow(0 0 5px rgba(255, 255, 255, 0.8));
                    opacity: 1;
                }
                .text{
                    transform: translateY(-25px);
                    opacity: 0;
                }
            }
            li{
                list-style: none;
                position: relative;
                z-index: 1000;
                transition: 0.05s ease-in;
                a{
                    position: relative;
                    display: flex;
                    width: 90px;
                    justify-content: center;
                    align-items: center;
                    flex-direction: column;
                    .text{
                        position: absolute;
                        display: block;
                        color: #fff;
                        font-weight: 400;
                        font-size: 1em;
                        transition: 0.3s;
                    }
                    .icon{
                        color:#fff;
                        transform: translateY(40px);
                        transition: 0.2s;
                        opacity: 0;
                    }
                }
            }
            li:hover{
                .icon{
                    transform: translateY(10px);                    
                    opacity: 1;
                    filter: drop-shadow(0 0 5px rgba(255, 255, 255, 0.8));
                }
                .text{
                    transform: translateY(-25px);
                    opacity: 0;
                }
            }
        }
    }

</style>



