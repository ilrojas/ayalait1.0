---

// Supports weights 100-900
import '@fontsource-variable/jost';
// Supports weights 100-900
import '@fontsource-variable/montserrat';

interface Props {
	title: string;
}

const { title } = Astro.props;


---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="AYALA IT Empresa de Desarrollo de Software" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<title>{title}</title>
		<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous">
	</head>
	<body class="principal-container">
		<slot />
	</body>
</html>
<style is:global>
	.principal-container{
		/*height: 100vh;
		width: 100vw;*/
	}	
	/* Media Queries para diferentes tama√±os de pantalla */
	@media (max-width: 768px) {
            .principal-container {
                grid-template-areas:
                    'header-area'
					'side-area'
                    'content-area'                    
                    'footer-area';
            }
        }
    @media (max-width: 480px) {
        .principal-container {
            grid-template-areas:
                'header-area'
                'side-area'
                'content-area'
                'footer-area';
        }
    }

	
	.content{
		/*background-color: burlywood;*/
		grid-area: content-area;
	}
	.footer{
		/*background-color: darkolivegreen;*/
		grid-area: footer-area;
	}
	html {
		font-family: 'Jost Variable', system-ui, sans-serif;
		background: #F5F7F9;
		color: black;
	}
	body{
		margin: 0;
		/*,#7579a7,#00064d */
		background: linear-gradient(0deg,#3f007b, #3d003d);
		/*background: #20003d;*/
		/*background-image: linear-gradient(to right,#213276 1px, transparent 1px), linear-gradient(to bottom,#a2a2a2 1px, transparent 1px);*/
		/*background-size: 4vh 4vh;*/
		animation: gradientAnimation 3s ease infinite;
		display: flex;
		justify-content: center;
		color: white;		
	}
	@keyframes gradientAnimation{
		0%{
			background-position: 0% 50%;
		}
		50%{
			background-position: 100% 50%;
		}
		100%{
			background-position: 0% 50%;
		}
	}	
	
</style>
<script>
	
	let liMenu= document.querySelectorAll(".navigation > ul > li > a");
	liMenu.forEach(elemento=>{
		elemento.addEventListener("click", function(event){
			event.preventDefault();
			liMenu.forEach(link => link.parentElement.classList.remove('active'));
			let parent=elemento.parentElement.classList;
			(parent.contains("active")) ? parent.remove("active") : parent.add("active");
		});
	});
</script>
